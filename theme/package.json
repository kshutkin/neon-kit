{
  "name": "@neon-kit/theme",
  "version": "0.0.1",
  "description": "@neon-kit/theme is a simple, lightweight, CSS theme for Tailwind CSS with optional neon-like colors / effects.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kshutkin/neon-kit.git",
    "directory": "theme"
  },
  "keywords": [
    "theme",
    "css",
    "neon"
  ],
  "files": [
    "./*.css",
    "components"
  ],
  "author": "Konstantin Shutkin",
  "license": "MIT",
  "style": "index.css",
  "exports": {
    "./package.json": "./package.json",
    "./index.css": "./index.css",
    "./index": "./index.css",
    "./reset-normilize.css": "./reset-normilize.css",
    "./reset-normilize": "./preflight.css",
    "./theme.css": "./theme.css",
    "./theme": "./theme.css",
    "./components.css": "./components.css",
    "./components": "./components.css"
  },
  "bugs": {
    "url": "https://github.com/kshutkin/neon-kit/issues"
  },
  "homepage": "https://github.com/kshutkin/neon-kit",
  "scripts": {
    "start": "npx npm-run-all -p tw http",
    "tw": "npx @tailwindcss/cli -i ./index.css -o ./docs/output.css --watch",
    "http": "npx http-server ./docs/",
    "prepack": "npx pkgprn"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "tailwindcss": "^4.1.13",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "npm-run-all": "4.1.5",
    "http-server": "14.1.1"
  }
}
