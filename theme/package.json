{
  "name": "@neon-kit/theme",
  "version": "0.0.1",
  "description": "@neon-kit/theme is a simple, lightweight, CSS theme for Tailwind CSS with optional neon-like colors / effects.",
  "repository": {
    "type": "git",
    "url": "https://github.com/kshutkin/neon-kit.git"
  },
  "keywords": [
    "theme",
    "css",
    "neon"
  ],
  "author": "Konstantin Shutkin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kshutkin/neon-kit/issues"
  },
  "homepage": "https://github.com/kshutkin/neon-kit",
